<Window x:Class="PRecu.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRecu"
        mc:Ignorable="d"
        Title="Admin" Height="250" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="https://c.wallhere.com/photos/48/ff/simple_background_texture_textured_blue_blue_background_simple_pattern-257765.jpg!d"></ImageBrush>
    </Window.Background>
    <Grid>
        <StackPanel>
            <Button x:Name="BAccederP" Margin="50,30,50,10" Width="100" Height="28" FontSize="20" FontWeight="DemiBold" FontFamily="Arial" Click="BAccederP_Click" >Mantenimiento</Button>
            <Button x:Name="BAccederD" Margin="50,10" Width="100" Height="28" FontSize="20" FontWeight="DemiBold" FontFamily="Arial" Click="BAccederD_Click" >Vehiculo</Button>
            <Button x:Name="BAccederC" Margin="50,10" Width="100" Height="28" FontSize="20" FontWeight="DemiBold" FontFamily="Arial" Click="BAccederC_Click" >Cliente</Button>
            <Button x:Name="BSalir" Margin="50,10" Width="100" Height="28" FontSize="20" FontWeight="DemiBold" FontFamily="Arial" Click="BSalir_Click" >Salir</Button>

        </StackPanel>
    </Grid>
</Window>
